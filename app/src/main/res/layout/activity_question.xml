<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_question_again"
        bootstrap:roundedCorners="true"
        bootstrap:bootstrapBrand="info"
        bootstrap:bootstrapSize="xl"
        bootstrap:bootstrapText="again {fa-refresh}"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_question_decide"
        bootstrap:roundedCorners="true"
        bootstrap:bootstrapBrand="info"
        bootstrap:bootstrapSize="xl"
        bootstrap:bootstrapText="{fa-check}"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/button_question_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        bootstrap:bootstrapBrand="info"
        bootstrap:bootstrapSize="xl"
        bootstrap:bootstrapText="{fa-angle-left} back"
        bootstrap:roundedCorners="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
