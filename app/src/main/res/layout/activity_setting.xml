<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_setting_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:text="配置" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="piano"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User2"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User3"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User4"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User5"/>



        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView_setting_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:text="音の名前" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:columnCount="2"
        android:rowCount="2">

        <Button
            android:id="@+id/button_setting_sound_1"
            android:layout_column="0"
            android:layout_row="0"
            android:text="English"
            />

        <Button
            android:id="@+id/button_setting_sound_2"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Germany"
            />

        <Button
            android:id="@+id/button_setting_sound_3"
            android:layout_column="1"
            android:layout_row="0"
            android:text="Italian"
            />

        <Button
            android:id="@+id/button_setting_sound_4"
            android:layout_column="1"
            android:layout_row="1"
            android:text="None"
            />


    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_setting_reset"
            android:text="リセット"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_setting_decide"
            android:text="決定"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_setting_back"
            android:text="戻る"/>

    </LinearLayout>

</LinearLayout>

