<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/button_mode_4"
        android:orientation="vertical">

        <TextView
            android:text="モード選択画面"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:textAlignment="center" />

        <Button
            android:text="トレーニング"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/button_mode_1"
            android:layout_gravity="center"
            android:layout_weight="3"/>

        <Button
            android:text="力試し"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/button_mode_2"
            android:layout_weight="3"
            android:layout_gravity="center" />

        <Button
            android:text="友達と対決"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/button_mode_3"
            android:layout_weight="3"
            android:layout_gravity="center" />

    </LinearLayout>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_mode_4"
        bootstrap:roundedCorners="true"
        bootstrap:bootstrapBrand="info"
        bootstrap:bootstrapSize="xl"
        bootstrap:bootstrapText="{fa-angle-left} TOP"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_mode_5"
        bootstrap:roundedCorners="true"
        bootstrap:bootstrapBrand="info"
        bootstrap:bootstrapSize="xl"
        bootstrap:bootstrapText="SETTING {fa-gear}"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />



    <!--
    <Button
        android:id="@+id/button_mode_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="設定" />
    -->
</RelativeLayout>